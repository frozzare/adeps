    "@typescript-eslint/parser": "^4.26.0",
    "eslint": "^7.27.0",
    "jest": "^27.0.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "execa": "^5.1.1",
