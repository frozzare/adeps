{
  "name": "xdeps",
  "version": "1.0.0",
  "description": "Find node dependencies from files, directory or text.",
  "main": "dist/index.js",
  "types": "dist",
  "bin": {
    "xdeps": "bin/xdeps"
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/frozzare/xdeps.git"
